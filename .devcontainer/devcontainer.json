{
    "name": "Yaklang Dev Container",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "hostRequirements": {
       "cpus": 8,
       "memory": "16gb",
       "storage": "64gb"
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "16"
        },
        "ghcr.io/devcontainers/features/go:1": {
            "version": "1.20.3"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:1": {
            "version": "latest",
            "moby": true
        }
    }
}
